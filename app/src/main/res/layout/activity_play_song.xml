<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="100">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:contentDescription="@string/music_note"
        app:srcCompat="@drawable/musicnote" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/playsong_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/playsong_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/playsong_name_label"
            android:layout_toRightOf="@+id/playsong_name_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="Song Name" />

        <TextView
            android:id="@+id/playsong_artist_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playsong_name_label"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/artist"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/playsong_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playsong_name"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/playsong_artist_label"
            android:layout_toRightOf="@+id/playsong_artist_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="Song Artist" />

        <TextView
            android:id="@+id/playsong_length_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playsong_artist_label"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/length"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/playsong_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playsong_artist"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/playsong_length_label"
            android:layout_toRightOf="@+id/playsong_length_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="SongLength" />

    </RelativeLayout>

</LinearLayout>